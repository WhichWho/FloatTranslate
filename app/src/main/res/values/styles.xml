<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="@android:style/Theme.Material.NoActionBar">
		<item name="android:colorPrimary">@color/md500</item>
		<item name="android:colorPrimaryDark">@color/md700</item>
		<item name="android:colorAccent">@color/mda200</item>
		<item name="android:navigationBarColor">@null</item>
		<item name="android:windowBackground">@null</item>
		<!--<item name="android:textViewStyle">@style/MyTextViewStyle</item>
		<item name="android:editTextStyle">@style/MyEditTextStyle</item>-->
	</style>

	<style name="AppThemeP" parent="AppTheme">
		<item name="android:colorPrimary">@color/md500p</item>
		<item name="android:colorPrimaryDark">@color/md700p</item>
		<item name="android:colorAccent">@color/mda200p</item>
	</style>
	
	<style name="TitleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFFFF</item>
		<item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
		<item name="android:typeface">normal</item>
    </style>

	<style name="ItemTextViewStyle" parent="android:Widget.TextView">
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
		<item name="android:typeface">normal</item>
    </style>

	<style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">normal</item>
		<item name="android:typeface">normal</item>
    </style>

	<style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">normal</item>
		<item name="android:typeface">monospace</item>
    </style>
</resources>
